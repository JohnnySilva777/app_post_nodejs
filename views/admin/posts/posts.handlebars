<h2>Lista de Posts</h2>
<hr>
<a href="/admin/post/add">
    <button class="btn btn-success w-100">Novo Post</button>
</a>

{{#each posts}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{title}}</h4>
            <h5>{{description}}</h5>
            <h5>{{content}}</h5>
            <small>Categoria: {{category.name}}</small><br>
            <small>Slug: {{slug}}</small><br>
            <small>Created: {{date}}</small>
            <a href="/admin/post/edit/{{_id}}">
                <button class="btn btn-primary w-100">Editar Post</button>
            </a>
            <form action="/admin/post/destroy" method="post">
                <input type="hidden" name="id" value="{{_id}}">
                <button class="btn btn-danger w-100 mt-2" type="submit">Deletar Post</button>
            </form>
        </div>
    </div>
{{else}}
    <h4 class="mt-4">Nenhum Post registrado</h4>
{{/each}}