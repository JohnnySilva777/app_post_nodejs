{{#each errors}}
    <div class="alert alert-danger">{{text}}</div>
{{/each}}
<div class="card">
    <div class="card-body">
        <h2>Cadastro Categoria</h2>
        <form action="/admin/category/new" method="post">
            <div class="form-group">
                <label for="name">Name</label>
                <input name="name" required type="text" class="form-control" id="name" aria-describedby="name"> </div>
            <div class="form-group">
                <label for="slug">Slug</label>
                <input name="slug" required type="text" class="form-control" id="slug">
            </div>
            <button type="submit" class="btn btn-primary w-100">Submit</button>
        </form>
    </div>
</div>