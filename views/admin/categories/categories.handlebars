<h2>Lista de Categorias</h2>
<hr>
<a href="/admin/category/add">
    <button class="btn btn-success w-100">Nova Categorias</button>
</a>

{{#each categories}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{name}}</h4>
            <small>Slug: {{slug}}</small><br>
            <small>Created: {{date}}</small>
            <a href="/admin/category/edit/{{_id}}">
                <button class="btn btn-primary w-100">Editar Categoria</button>
            </a>
            <form action="/admin/category/destroy" method="post">
                <input type="hidden" name="id" value="{{_id}}">
                <button class="btn btn-danger w-100 mt-2" type="submit">Deletar Post</button>
            </form>
        </div>
    </div>
{{else}}
    <h4 class="mt-4">Nenhuma categoria registrada</h4>
{{/each}}